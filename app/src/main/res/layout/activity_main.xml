<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.boldijarpaul.mvprxsample.activities.MainActivity">

    <Button
        android:id="@+id/jokeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get JOKE!"/>
    <TextView
        android:id="@+id/jokeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="joke joke joke"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="first name"/>
        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="last name"/>

        <Button
            android:id="@+id/nameJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Named JOKE!"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/nameJokeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name joke name joke "
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainNavigationButton"
        android:text="See more Jokes!"/>
</LinearLayout>
